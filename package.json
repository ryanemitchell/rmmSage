{
  "name": "sage",
  "private": true,
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "bud dev",
    "build": "bud build",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint resources/scripts",
    "lint:js:fix": "eslint --fix resources/scripts",
    "lint:css": "stylelint \"resources/**/*.{css,scss,vue}\"",
    "lint:css:fix": "stylelint --fix \"resources/**/*.{css,scss,vue}\"",
    "cleanup:npmPackages": "sudo rm -rf node_modules && npm install",
    "cleanup:comploserPackages": "sudo rm -rf vendor && composer install",
    "test": "npm run lint",
    "translate": "npm run translate:pot && npm run translate:js",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --ignore-domain --include=\"app,resources\"",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print"
  },
  "devDependencies": {
    "@roots/bud": "5.7.7",
    "@roots/bud-tailwindcss": "5.7.7",
    "@roots/sage": "5.7.7",
    "@roots/bud-eslint": "5.7.7",
    "@roots/bud-prettier": "5.7.7",
    "@roots/bud-sass": "^5.7.7",
    "@roots/bud-stylelint": "5.7.7",
    "@roots/eslint-config": "5.7.7",
    "postcss-scss": "4.0.3",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "rustywind": "^0.13.0",
    "stylelint": "^14.6.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.2.0"
  },
  "dependencies": {
    "accordion-js": "^3.2.0",
    "aos": "^2.3.4",
    "swiper": "^8.0.7",
    "tw-elements": "^1.0.0-alpha12"
  }
}
