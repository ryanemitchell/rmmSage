{
  "name": "sage",
  "private": true,
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "bud dev",
    "build": "bud build",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint resources/scripts",
    "lint:css": "stylelint \"resources/**/*.{css,scss,vue}\"",
    "lint:css:fix": "stylelint --fix \"resources/**/*.{css,scss,vue}\"",
    "test": "npm run lint",
    "translate": "npm run translate:pot && npm run translate:js",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --ignore-domain --include=\"app,resources\"",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print",
    "rustywind-fix": "rustywind --write ."
  },
  "devDependencies": {
    "@roots/bud": "5.5.0",
    "@roots/bud-eslint": "5.4.0",
    "@roots/bud-prettier": "5.4.0",
    "@roots/bud-sass": "^5.4.0",
    "@roots/bud-stylelint": "5.4.0",
    "@roots/bud-tailwindcss": "5.5.0",
    "@roots/eslint-config": "5.4.0",
    "@roots/sage": "5.5.0",
    "postcss-scss": "^4.0.3",
    "stylelint-config-standard-scss": "^3.0.0",
    "rustywind": "^0.12.2",
    "stylelint": "^14.5.3",
    "stylelint-scss": "^4.1.0"
  },
  "dependencies": {
    "swiper": "^8.0.7"
  }
}
